{
  "manifest_version": 3,
  "name": "LinkedIn Username Extractor",
  "version": "1.0.0",
  "description": "Extract and display LinkedIn username",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "cookies"
  ],
  "icons": {
    "16": "vite.svg"
  },
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://blueparrotai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://blueparrotai.com/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html","index.js","index.css","logo.png"],
      "matches": ["*://www.linkedin.com/*"]
    }
  ]
}